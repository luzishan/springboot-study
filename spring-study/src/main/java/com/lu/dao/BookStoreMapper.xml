<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lu.dao.BookStoreMapper">
    <update id="updateBookStoreNumber">
        update book_store set number=number-#{number} where id = #{id}
    </update>

</mapper>